<Window x:Class="DemoApp.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        mc:Ignorable="d"
        Title="Progress Dialog" Height="180" Width="320" MinHeight="180" MinWidth="240"
        WindowStartupLocation="CenterOwner"
        Closing="Window_Closing">
    <StackPanel VerticalAlignment="Center">
        <Label Name="MessageLabel" Width="300" Height="32">text</Label>
        <ProgressBar Name="ProgressBar" Width="300" Height="18" Margin="10" IsIndeterminate="False" Minimum="0" Maximum="1"/>
        <Button Name="CancelButton" Width="100" IsDefault="True" Click="CancelButton_Click">Cancel</Button>
    </StackPanel>
</Window>
